<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="text-danger">
        <%= flash[:alert] %>
      </div>
      <h3 class="font-weight-bold mx-auto my-3">管理者ログイン</h3>
      <div class="hline"></div>
      <div class="form_sign">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group mt-3">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control" %>
          </div>

          <div class="my-5">
            <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
          </div>
        <% end %>

        <%= render "admin/shared/links" %>
      </div>
    </div>
  </div>
</div>

