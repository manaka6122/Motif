<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 mx-auto">
      <h3 class="font-weight-bold mx-auto my-3">楽団情報編集</h3>
      <div class="hline"></div>
      <div class="text-danger">
        <%= render 'layouts/errors', obj: @team %>
      </div>
      <%= form_with model: @team,  url: admin_team_path do |f| %>
        <div class="form-group row mt-5">
          <%= f.label :name, "楽団名", class: "col-sm-4 col-form-label" %>
          <div class="col-sm-8">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row mt-3">
          <%= f.label :address, "活動場所", class: "col-sm-4 col-form-label" %>
          <div class="col-sm-8">
            <%= f.text_field :address, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row mt-3">
          <%= f.label :tag_name, "募集パート", class: "col-sm-4 col-form-label" %>
          <div class="col-sm-8">
            <%= f.text_field :tag_name , placeholder: "募集パートを（ , ）区切りで入力", class: "form-control" %>
          </div>
        </div>
        <div class="form-group row mt-3">
          <%= f.label :introduction, "紹介文", class: "col-sm-4 col-form-label" %>
          <div class="col-sm-8">
            <%= f.text_area :introduction, class: "form-control" %>
          </div>
        </div>
        <div class="form-group text-center mt-3">
          <%= f.submit "保存", class: "btn btn-sm btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
