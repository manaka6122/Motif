<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-3 mt-3">
      <%= render "admin/customers/info", customer: @activity.customer %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h3 class="font-weight-bold mt-3">活動情報詳細</h3>
    <div class="hline"></div>
    <div class="row justify-content-center mt-5">
			<div class="col-md-5">
				<%= image_tag @activity.get_image(200, 400) %>
			</div>
			<div class="col-md-7">
        <table class="w-100">
          <tr class="row">
            <th class="col-4">投稿者名</th>
            <td class="col-8"><%= link_to @activity.customer.name, admin_customer_path(@activity.customer) %></td>
          </tr>
          <tr class="row">
            <th class="col-4">楽団名</th>
            <td class="col-8"><%= @activity.team.name %></td>
          </tr>
          <tr class="row">
            <th class="col-4">タイトル</th>
            <td class="col-8"><%= @activity.title %></td>
          </tr>
          <tr class="row">
            <th class="col-4">内容</th>
            <td class="col-8"><%= @activity.content %></td>
          </tr>
          <tr class="row">
            <th class="col-4">開催日</th>
            <td class="col-8"><%= @activity.activity_on %></td>
          </tr>
          <tr class="row">
            <th class="col-4">表示状態</th>
            <td class="col-8"><%= @activity.status_i18n %></td>
          </tr>
          <tr class="row">
            <th class="col-4"></th>
            <td class="col-8">
              <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
              <%= @activity.favorites.count %>
            </td>
        </table>
      </div>
      <div class="col-12 mt-5">
        <%= link_to "編集", edit_admin_activity_path(@activity), class: "btn btn-sm btn-primary" %>
        <%= link_to "削除", admin_activity_path(@activity), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-primary" %>
      </div>
    </div>
  </div>
</div>