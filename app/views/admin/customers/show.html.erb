<div class="container">
  <div class="row justify-content-center">
    <div class="col col-md-10">
    <h2>会員詳細</h2>
      <div class="flex">
        <div class="image_field">
  			  <%= image_tag @customer.get_profile_image(100, 100) %>
  			</div>
        <table>
          <tr>
            <th>会員ID</th>
            <td><%= @customer.id %></th>
          </tr>
          <tr>
            <th>名前</th>
            <td><%= @customer.name %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <th>プロフィール</th>
            <td><%= @customer.profile %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>