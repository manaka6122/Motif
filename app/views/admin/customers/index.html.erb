<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <h3 class="font-weight-bold mt-3">会員一覧</h3>
      <div class="hline"></div>
      <table class="table table-hover">
        <thead>
      		<th>会員ID</th>
      		<th>名前</th>
      		<th>メールアドレス</th>
    		</thead>
    		<tbody>
    		  <% @customers.each do |customer| %>
    		  <tr>
    		    <td><%= customer.id %></td>
    		    <td><%= link_to customer.name, admin_customer_path(customer)  %></td>
    		    <td><%= customer.email %></td>
    		  </tr>
    		  <% end %>
    		</tbody>
    	</table>
    </div>
  </div>
  <div>
    <%= paginate @customers %>
  </div>
</div>