<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="img-wrap">
        <%= image_tag 'top_image.jpg', class: "image" %>
        <p>Welcome to Motif</p>
      </div>
      <div class="row mx-auto">
        <div class=" btn-wrapper col-10 mx-auto mt-5">
          <div class="text-center"><smal>このサイトの閲覧はログインなしで行えます。</smal></div>
          <div class="row mt-3">
            <%= link_to "Login", new_customer_session_path, class: "btn btn-primary btn-top mx-auto" %>
            <%= link_to "Signin", new_customer_registration_path, class: "btn btn-primary btn-top mx-auto" %>
            <%= link_to "Guest login", customers_guest_sign_in_path, class: "btn btn-primary btn-top mx-auto", method: :post %>
          </div>
        </div>
      </div>
      <div class="row mx-auto">
        <div class="col-md-10 offset-md-1 mt-5">
          <div class="card-deck">
            <% @activities.last(3).each do |activity| %>
            <div class="card mx-auto", style="max-width: 16rem; height: 400px;">
              <%= link_to activity_path(activity) do %>
                <%= image_tag activity.get_image(250, 170), class: "card-img-top" %>
              <% end %>
              <div class="card-body">
                <h5 class="card-title"><%= activity.title %><h5>
                <p class="card-text"><%= activity.content%></p>
              </div>
            </div>
            <% end %>
          </div>
          <div class="text-right mb-3">
            <%= link_to activities_path do %>
              <i class="fa fa-angle-double-right size"></i>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
