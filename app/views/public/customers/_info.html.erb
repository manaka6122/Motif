<table class="table">
  <tr><%= image_tag customer.get_profile_image(200, 200), class: "rounded-circle d-block mx-auto mb-2" %></tr>
  <tr>
    <th>名前</th>
    <td><%= customer.name %></td>
  </tr>
  <% if customer == current_customer %>
    <tr>
      <th>メールアドレス</th>
      <td><%= customer.email %></td>
    </tr>
  <% end %>
  <tr>
    <th>紹介文</th>
    <td><%= customer.profile %></td>
  </tr>
</table>
<div class="row">
  <% if customer.name != "guestuser" &&  customer == current_customer %>
    <%= link_to favorites_customer_path(customer), class: "btn btn-primary btn-info mx-auto" do %>
    <i class="fas fa-heart"></i>
    <% end %>
    <%= link_to notifications_path, class: "btn btn-primary btn-bell mx-auto" do %>
      <% if unchecked_notifications.any? %>
      <span class="fa-stack">
        <i class="fas fa-bell"></i>
        <i class="fas fa-circle n-circle fa-stack-1x fa-inverse"></i>
      </span>
      <% else %>
        <i class="fas fa-bell"></i>
      <% end %>
    <% end %>
    <%= link_to edit_customer_path(customer), class: "btn btn-primary btn-info mx-auto" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <% else %>
    <%= link_to "Begin Chat", message_path(customer.id), class: "btn btn-primary btn-info mx-auto" %>
  <% end %>
</div>