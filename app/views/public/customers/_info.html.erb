<table class="table">
  <tr><%= image_tag customer.get_profile_image(200, 200), class: "rounded-circle d-block mx-auto mb-2" %></tr>
  <tr>
    <th>名前</th>
    <td><%= customer.name %></td>
  </tr>
  <% if customer == current_customer %>
    <tr>
      <th>メールアドレス</th>
      <td><%= customer.email %></td>
    </tr>
  <% end %>
  <tr>
    <th>紹介文</th>
    <td><%= customer.profile %></td>
  </tr>
</table>
<div class="row">
  <% if customer.name != "guestuser" %>
    <% if customer == current_customer %>
      <%=link_to "お気に入り", favorites_customer_path(customer), class: "btn btn-primary btn-info mx-auto mb-2" %>
      <%= link_to edit_customer_path(customer), class: "btn btn-primary btn-info mx-auto" do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
    <% else %>
      <%= link_to "Begin Chat", message_path(customer.id), class: "btn btn-primary btn-info mx-auto" %>
    <% end %>
  <% end %>
</div>