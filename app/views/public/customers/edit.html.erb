<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>会員情報編集</h2>
      <%= form_with model: @customer do |f| %>
      <div class="form-group">
        <%= f.label :image, "プロフィール画像" %>
        <%= f.file_field :profile_image, class: "form-control-file cus_image", accept: 'image/*' %>
      </div>
      <div class="form-group">
        <%= f.label :name, "名前" %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :profile, "紹介文" %>
        <%= f.text_area :profile, class: "form-control profile" %>
      </div>
      <div class="form-group">
        <%= f.submit "保存", class: "btn btn-primary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>

