<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>活動情報新規投稿</h2>
      <%= form_with model: @activity do |f| %>
        <div class="flex">
          <table>
            <thead>
              <tr>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= f.label :image, "画像" %></td>
                <td><%= f.file_field :image, accept: "image/*" %></td>
              </tr>
              <tr>
                <td><%= f.label :team_id, "楽団名" %></td>
                <td class="select_field"><%= f.collection_select :team_id, Team.all, :id, :name %></td>
              </tr>
              <tr>
                <td><%= f.label :title, "タイトル" %></td>
                <td><%= f.text_field :title %></td>
              </tr>
              <tr>
                <td><%= f.label :content, "内容" %></td>
                <td><%= f.text_area :content %></td>
              </tr>
              <tr>
                <td><%= f.label :activity_on, "開催日" %></td>
                <td><%= f.date_field :activity_on %></td>
              </tr>
              <tr>
                <td><%= f.label :status, "表示状態" %></td>
                <td class="select_field">
                  <%= f.collection_radio_buttons :status, Activity.statuses_i18n, :first , :last do |b| %>
                    <%= b.label(class: "radio_button") { b.radio_button(class: "radio_button") + b.text } %>
                  <% end %>
                </td>
              </tr>
            </tbody>
          </table>
          <div class="flex align-center pl5">
    			  <%= f.submit "投稿", class: "btn btn-primary" %>
    		  </div>
        </div>
      <% end %>
    </div>
  </div>
</div>