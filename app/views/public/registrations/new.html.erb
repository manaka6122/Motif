<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="form_sign">
      <div class="text-center mb-4">
        <h3 class="font-weight-normal">新規登録</h3>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="form-group mt-3">
          <%= f.text_field :name, autofocus: true, placeholder: "Name", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.text_area :profile, autofocus: true, placeholder: "Profile", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password(6文字以上)", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password(確認用)", class: "form-control" %>
        </div>

        <div class="my-5">
          <%= f.submit "新規登録", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
      <span>既に登録済みの方は</span>
      <p><%= link_to "こちら", new_customer_session_path %>からログインしてください</p>
      </div>
    </div>
  </div>
</div>
