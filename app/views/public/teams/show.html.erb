<div class="container">
  <div class="row">
    <div class="col-md-5 mt-3">
      <%= render "public/customers/info", customer: @team.customer %>
    </div>
    <div class="col-md-7">
      <h3 class="font-weight-bold mt-3">楽団詳細</h3>
      <div class="hline"></div>
      <div class="row justify-content-center mt-2">
        <div class="col-md-12 mt-3">
          <table class="table w-100">
            <tr class="row">
              <th class="col-4">楽団名</th>
              <td class="col-8"><%= @team.name %></td>
            </tr>
            <tr class="row">
              <th class="col-4">活動場所</th>
              <td class="col-8"><%= @team.address %></td>
            </tr>
            <tr class="row">
              <th class="col-4">募集パート</th>
              <td class="col-8">
                <% @team.tags.each do |tag| %>
                  <li style="list-style: none;"><%= link_to tag.name, search_path(content: tag.name, model:"tag"), class: "btn btn-tag" %></li>
                <% end %>
              </td>
            </tr>
            <tr class="row">
              <th class="col-4">紹介文</th>
              <td class="col-8"><%= @team.introduction %></td>
            </tr>
          </table>
        </div>
        <div class="col-12 mt-5">
          <% if @team.customer == current_customer %>
            <%= link_to "編集", edit_team_path(@team), class: "btn btn-sm btn-primary mr-2" %>
            <%= link_to "削除", team_path(@team), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>