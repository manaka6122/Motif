<div class="text-danger mt-2">
  <%= render "layouts/errors", obj: team %>
</div>
<%= form_with model: team, local:true do |f| %>
  <div class="form-group row mt-5">
    <%= f.label :name, "楽団名", class: "col-sm-4 col-form-label" %>
    <div class="col-sm-8">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row mt-3">
    <%= f.label :address, "活動場所", class: "col-sm-4 col-form-label" %>
    <div class="col-sm-8">
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row mt-3">
    <%= f.label :tag_name, "募集パート", class: "col-sm-4 col-form-label" %>
    <div class="col-sm-8">
      <%= f.text_field :tag_name ,value: tag_list, placeholder: "募集パートを（ , ）区切りで入力", class: "form-control" %>
    </div>
  </div>
  <div class="form-group row mt-3">
    <%= f.label :introduction, "紹介文", class: "col-sm-4 col-form-label" %>
    <div class="col-sm-8">
      <%= f.text_area :introduction, class: "form-control" %>
    </div>
  </div>
  <div class="form-group text-center mt-3">
    <%= f.submit submit, class: "btn btn-sm btn-primary" %>
  </div>
<% end %>