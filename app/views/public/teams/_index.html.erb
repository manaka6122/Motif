<table class="table">
  <thead>
    <tr>
      <th>楽団名</th>
      <th>活動場所</th>
      <th>募集パート</th>
    </tr>
  </thead>
  <tbody>
    <% teams.each do |team| %>
    <tr>
      <td><%= link_to team.name, team_path(team), class: "underline" %></td>
      <td><%= team.address %></td>
      <% team.tags.each do |tag| %>
      <td>
        <li style="list-style: none;"><%= link_to "#{tag.name}", teams_path(tag) %></li>
      </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
