<div class="container">
    <div class="row">
        <div class="col-xs-6">
            <h2>CHAT WITH <%= @customer.name %></h2>

            <table class="message table">
              <thead>
                <tr>
                  <th style="text-align: left; font-size: 20px;"><%= current_customer.name %></th>
                  <th style="text-align: right; font-size: 20px;"><%= @customer.name %></th>
                </tr>
              </thead>
              <% @messages.each do |message| %>
                <% if message.customer_id == current_customer.id %>
                <tbody>
                  <tr>
                    <th>
                      <p style="text-align: left;"><%= message.content %></p>
                    </th>
                    <th></th>
                  </tr>
                <% else %>
                  <tr>
                    <th></th>
                    <th>
                      <p style="text-align: right;"><%= message.content %></p>
                    </th>
                  </tr>
                </tbody>
                <% end %>
              <% end %>
            </table>

            <%= form_with model: @message, data: {remote: true} do |f| %>
              <%= f.text_field :content %>
              <%= f.hidden_field :room_id %>
              <%= f.submit "SEND", class:"btn btn-sm btn-success chat-btn" %>
            <% end %>
        </div>
    </div>
</div>