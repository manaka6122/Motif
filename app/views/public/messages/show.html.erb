<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <h2>CHAT WITH <%= @customer.name %></h2>
        <% @messages.each do |message| %>
          <% if message.customer_id == current_customer.id %>
            <div class="current_user">
              <strong class="current_user"><%= message.content %></strong>
              <small class="current_user"><%= current_customer.name %>さん</small>
            </div>
          <% else %>
            <div class="visited_user">
              <strong class="visited_user"><%= message.content %></strong>
              <small class="visited_user"><%= @customer.name %>さん</small>
            </div>
          <% end %>
        <% end %>
            <%= form_with model: @message, data: {remote: true} do |f| %>
              <%= f.text_field :content %>
              <%= f.hidden_field :room_id %>
              <%= f.submit "SEND", class:"btn btn-sm btn-success chat-btn" %>
            <% end %>
    </div>
  </div>
</div>